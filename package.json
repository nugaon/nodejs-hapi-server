{
  "name": "nodejs-hapi-server",
  "version": "0.1.0",
  "description": "Basic hapi server in NodeJS",
  "main": "src/init.ts",
  "scripts": {
    "build": "webpack --progress --mode production --env.profile=prod",
    "dev": "cross-env ENV=development nodemon --watch 'src/**/*.ts' --exec 'ts-node' src/init.ts",
    "test": "npx jest"
  },
  "keywords": [
    "blockchain",
    "nodejs",
    "node",
    "typescript",
    "tesco",
    "chain"
  ],
  "testPathIgnorePatterns": [
    "/build/",
    "/node_modules/",
    "/src/environments/"
  ],
  "author": "Viktor Levente Toth",
  "email": "toth.viktor.levente@gmail.com",
  "license": "MIT",
  "dependencies": {
    "@hapi/joi": "^17.1.1",
    "bcrypt-nodejs": "0.0.3",
    "boom": "^7.3.0",
    "hapi": "^18.1.0",
    "hapi-auth-cookie": "^10.0.0",
    "hapi-authorization": "^4.0.0",
    "hapi-swagger": "^13.0.0",
    "inversify": "^5.0.1",
    "mysql": "^2.18.1",
    "redis": "^3.0.2",
    "request": "^2.88.2",
    "request-promise": "^4.2.5",
    "typeorm": "^0.2.24",
    "winston": "^3.2.1",
    "winston-daily-rotate-file": "^4.4.2",
    "async-exit-hook": "^2.0.1"
  },
  "devDependencies": {
    "@types/node": "^13.13.4",
    "@types/request-promise": "^4.1.46",
    "cross-env": "^7.0.2",
    "inert": "^5.1.3",
    "nodemon": "^2.0.3",
    "reflect-metadata": "^0.1.13",
    "ts-loader": "^7.0.1",
    "ts-node-dev": "^1.0.0-pre.44",
    "tslint": "^6.1.2",
    "typescript": "^3.8.3",
    "vision": "^5.4.4",
    "webpack": "^4.43.0",
    "webpack-cli": "^3.3.11"
  }
}
